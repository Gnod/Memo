<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<FrameLayout
		android:id="@+id/menu_action_grid_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="-1px"
		android:background="@null" 
		android:visibility="gone"/>

	<GridView
		android:id="@+id/menu_action_list"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/menu_action_grid_header"
		android:background="@drawable/switch_bg_holo_dark"
		android:padding="3dp"
		android:gravity="center"
		android:fadingEdgeLength="0dp"
		android:stretchMode="columnWidth"
		android:verticalSpacing="3dp"
		android:numColumns="5"
		android:layout_marginTop="-1px" />

	<FrameLayout
		android:id="@+id/menu_acton_grid_footer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/menu_action_list"
		android:background="@null" 
		android:visibility="gone"/>

</RelativeLayout>